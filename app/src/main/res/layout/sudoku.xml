<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:id="@+id/background"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:background="@drawable/bg"
			android:gravity="center_horizontal"
			android:orientation="vertical"
			android:paddingBottom="50dip"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent">

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:paddingBottom="1dp">

				<TextView
					android:id="@+id/labelPuzzleName"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:ellipsize="marquee"
					android:paddingRight="8dp"
					android:singleLine="true" />

				<TextView
					android:id="@+id/labelPuzzleDifficulty"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Hard" />

			</LinearLayout>

			<com.app2go.sudokufree.SudokuPuzzleView
				android:id="@+id/viewPuzzle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:focusableInTouchMode="true"
				android:gravity="center" />
			<!-- -->
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:paddingBottom="1dp"
				android:paddingTop="1dp">

				<TextView
					android:id="@+id/labelPuzzleSource"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:ellipsize="marquee"
					android:paddingRight="8dp"
					android:singleLine="true"
					android:text="#1/100" />

				<TextView
					android:id="@+id/labelTimer"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="00:00:00" />

			</LinearLayout>


			<TableLayout
				android:id="@+id/keypad"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<TableRow>

					<ImageButton
						android:id="@+id/input_undo"
						style="@style/KeypadButton"
						android:layout_height="fill_parent"
						android:layout_gravity="center_vertical"
						android:src="@drawable/undo" />

					<com.app2go.sudokufree.KeypadToggleButton
						android:id="@+id/input_1"
						android:text="1" />

					<com.app2go.sudokufree.KeypadToggleButton
						android:id="@+id/input_2"
						android:text="2" />

					<com.app2go.sudokufree.KeypadToggleButton
						android:id="@+id/input_3"
						android:text="3" />
				</TableRow>

				<TableRow>

					<ImageButton
						android:id="@+id/input_redo"
						style="@style/KeypadButton"
						android:layout_height="fill_parent"
						android:layout_gravity="center_vertical"
						android:src="@drawable/redo" />

					<com.app2go.sudokufree.KeypadToggleButton
						android:id="@+id/input_4"
						android:text="4" />

					<com.app2go.sudokufree.KeypadToggleButton
						android:id="@+id/input_5"
						android:text="5" />

					<com.app2go.sudokufree.KeypadToggleButton
						android:id="@+id/input_6"
						android:text="6" />
				</TableRow>

				<TableRow>

					<com.app2go.sudokufree.KeypadButton
						android:id="@+id/input_invert"
						android:layout_height="fill_parent"
						android:layout_gravity="center_vertical"
						android:text="@string/button_invert" />

					<com.app2go.sudokufree.KeypadToggleButton
						android:id="@+id/input_7"
						android:layout_gravity="center_vertical"
						android:text="7" />

					<com.app2go.sudokufree.KeypadToggleButton
						android:id="@+id/input_8"
						android:layout_gravity="center_vertical"
						android:text="8" />

					<com.app2go.sudokufree.KeypadToggleButton
						android:id="@+id/input_9"
						android:layout_gravity="center_vertical"
						android:text="9" />

					<com.app2go.sudokufree.KeypadButton
						android:id="@+id/input_clear"
						android:layout_height="fill_parent"
						android:layout_gravity="center_vertical"
						android:text="@string/button_clear" />
				</TableRow>

			</TableLayout>

			<TextView
				android:id="@+id/labelCongrats"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:padding="5dp"
				android:textColor="#f242"
				android:textSize="16dp" />

			<Button
				android:id="@+id/buttonDismissCongrats"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="12dp"
				android:paddingRight="12dp"
				android:text="@string/button_dismiss_congrats" />

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:baselineAligned="false"
				android:gravity="center_vertical">

				<ImageButton
					android:id="@+id/buttonBack"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/back_button" />

				<Button
					android:id="@+id/buttonStart"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:paddingLeft="25dp"
					android:paddingRight="25dp"
					android:text="Start" />

				<ImageButton
					android:id="@+id/buttonNext"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/next_button" />


			</LinearLayout>


		</LinearLayout>

		<com.mechdome.view.google.AdMobBannerView
			android:id="@+id/bannerAdSudoku"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent" />


	</android.support.constraint.ConstraintLayout>


</merge>
